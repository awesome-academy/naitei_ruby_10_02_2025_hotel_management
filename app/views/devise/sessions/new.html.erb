<%= provide :title, t("login") %>
<h1><%= t("login") %></h1>

<div class="image-container">
  <img src="<%= asset_path("logo.jpg") %>" alt="Login Image" class="login-image" />
</div>

<div class="form-wrapper">
  <div class="login-form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6", data: { turbo: false } }) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, placeholder: t("enter_email"), class: "input-field" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "input-field" %>
      </div>

      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "check-box" %>
          <%= f.label :remember_me, t("remember_me"), class: "ml-2 text-sm text-gray-700" %>
        </div>

        <div>
          <%= f.submit t("login"), class: "submit-btn" %>
        </div>
      </div>
    <% end %>

    <div class="mt-4 text-sm text-center">
      <%= link_to t("forgot_your_password"), new_user_password_path, class: "text-blue-600 hover:underline" %><br />
      <%= t("no_account_yet") %>
      <%= link_to t("sign_up_now"), new_user_registration_path, class: "text-blue-600 hover:underline font-medium" %>
    </div>
  </div>
</div>
