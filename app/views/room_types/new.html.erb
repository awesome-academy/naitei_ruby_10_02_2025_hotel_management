<% provide :title, t(".room_type_management") %>
<div class="create-room-type-page">
  <div class="breadcrumbs">
    <%= link_to room_types_url do %>
      <i class="bi bi-arrow-return-left"></i>
    <% end %>
    <span><%= t ".create_room_type" %></span> 
  </div>

   <%= form_with model: @room_type, local: true do |f| %>
    <div class="form-group">
      <%= f.label :name, t(".name") %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description, t(".description") %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :price, t(".price") %>
      <%= f.number_field :price, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :view, t(".view") %>
      <%= f.text_field :view, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :images %>
      <%= f.file_field :images, multiple: true %>
    </div>

     <h3><%= t ".devices" %></h3>
    <div id="device-fields">
      <%= f.fields_for :devices do |device_form| %>
        <div class="device-entry">
          <%= device_form.text_field :name, placeholder: t(".device_name"), class: "form-control" %>
          <%= device_form.number_field :quantity, placeholder:  t(".quantity"), class: "form-control" %>
          <%= link_to "#", class: "remove-device btn btn-danger" do %>
            <i class="bi bi-trash-fill"></i>
          <% end %>
        </div>
      <% end %>
    </div>

    <button type="button" id="add-device" class="btn btn-primary"><%= t ".add_device" %></button>


    <div class="form-actions">
      <%= f.submit t(".create"), class: "btn btn-primary" %>
    </div>
  <% end %>

</div>
