<%= form_for @service do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, class: "form-control" %>
  </div>
  <span class="image form-group">
    <%= f.file_field :image, accept: Settings.allowed_image_file_type %>
    <% if @service.image.attached? %>
      <%= image_tag @service.image, class: "service-img-preview" %>
    <% end %>
  </span>
  <br>
  <%= f.submit t("save"), class: "btn btn-primary action" %>
<% end %>
