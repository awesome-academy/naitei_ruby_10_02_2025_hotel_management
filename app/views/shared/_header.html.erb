<header class="site-header">
  <div class="container">
    <div class="logo">
      <%= link_to t("logo"), root_path %>
    </div>
    <div class="right-menu">
      <div class="language-switch">
        <%= link_to t("language.vietnamese"), url_for(locale: :vi), class: (locale == :vi ? "active" : "") %> |
        <%= link_to t("language.english"), url_for(locale: :en), class: (locale == :en ? "active" : "") %>
      </div>
      <% if logged_in? %>
        <div class="dropdown">
          <button class="dropbtn">
            <i class="fa fa-user"></i>
          </button>
          <div class="dropdown-content">
            <%= link_to t("profile"), "#" %>
            <%= link_to t("settings"), "#" %>
            <%= link_to t("logout"), logout_path, method: :delete %>
          </div>
        </div>
      <% else %>
        <div class="login-link">
          <%= link_to t("login"), login_path %>
        </div>
      <% end %>
    </div>
  </div>
</header>
