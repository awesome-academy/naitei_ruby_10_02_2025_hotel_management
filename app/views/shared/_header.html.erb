<header class="site-header">
  <div class="container">
    <div class="logo">
      <%= link_to I18n.t('logo'), root_path %>
    </div>
    <div class="right-menu">
      <div class="language-switch">
        <%= link_to I18n.t('language.vietnamese'), url_for(locale: :vi), class: (I18n.locale == :vi ? 'active' : '') %> |
        <%= link_to I18n.t('language.english'), url_for(locale: :en), class: (I18n.locale == :en ? 'active' : '') %>
      </div>
      <div class="login-link">
        <%= link_to I18n.t('login'), "#" %>
      </div>
    </div>
  </div>
</header>
