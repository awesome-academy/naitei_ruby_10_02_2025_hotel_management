<%= t ".subject" %>

<%= t ".greeting", name: @request.user.usename %>
<%= t ".body" %>
<%= t ".checkin_date" %>: <%= @request.checkin_date %>
<%= t ".checkout_date" %>: <%= @request.checkout_date %>
<%= t ".room_type" %>: <%= @request.room_type.name %>
<%= t ".quantity" %>: <%= @request.quantity %>
<%= t ".stay_at" %>:
<% @request.rooms.each do |room| %>
    <%= room.room_number %>
<% end %>
